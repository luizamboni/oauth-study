{
  "realm": "oauth-study",
  "enabled": true,
  "registrationAllowed": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "internationalizationEnabled": false,
  "resetPasswordAllowed": true,
  "rememberMe": true,
  "sslRequired": "external",
  "clients": [
    {
      "clientId": "public-pkce-client",
      "name": "Public PKCE Client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "consentRequired": true,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "fullScopeAllowed": true,
      "attributes": {
        "pv3.skip.refresh.token": "false",
        "oauth2.device.authorization.grant.enabled": "true",
        "saml.assertion.signature": "false",
        "saml.server.signature": "false",
        "saml.client.signature": "false",
        "saml.encrypt": "false",
        "pkce.code.challenge.method": "S256"
      },
      "redirectUris": [
        "http://127.0.0.1:3000/*",
        "http://localhost:3000/*",
        "http://127.0.0.1:8000/callback",
        "http://localhost:8000/callback"
      ],
      "webOrigins": [
        "http://127.0.0.1:3000",
        "http://localhost:3000"
      ],
      "defaultClientScopes": [
        "profile",
        "email",
        "roles",
        "web-origins"
      ],
      "optionalClientScopes": [
        "service-audit"
      ]
    },
    {
      "clientId": "confidential-cli",
      "name": "Confidential CLI",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "confidential-cli-secret",
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "fullScopeAllowed": false,
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ],
      "defaultClientScopes": [
        "profile",
        "email",
        "roles",
        "web-origins",
        "service-audit"
      ],
      "optionalClientScopes": []
    }
  ],
  "clientScopes": [
    {
      "name": "profile",
      "description": "Basic user profile claims",
      "protocol": "openid-connect",
      "attributes": {
        "display.on.consent.screen": "true",
        "consent.screen.text": "${profileScopeConsentText}",
        "include.in.token.scope": "true"
      },
      "protocolMappers": [
        {
          "name": "preferred username",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "preferred_username",
            "jsonType.label": "String",
            "user.attribute": "username"
          }
        },
        {
          "name": "given name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "given_name",
            "jsonType.label": "String",
            "user.attribute": "firstName"
          }
        },
        {
          "name": "family name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "family_name",
            "jsonType.label": "String",
            "user.attribute": "lastName"
          }
        },
        {
          "name": "full name",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-full-name-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true"
          }
        }
      ]
    },
    {
      "name": "email",
      "description": "Email address claims",
      "protocol": "openid-connect",
      "attributes": {
        "display.on.consent.screen": "true",
        "consent.screen.text": "${emailScopeConsentText}",
        "include.in.token.scope": "true"
      },
      "protocolMappers": [
        {
          "name": "email",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "email",
            "jsonType.label": "String",
            "user.attribute": "email"
          }
        },
        {
          "name": "email verified",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-property-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "email_verified",
            "jsonType.label": "boolean",
            "user.attribute": "emailVerified"
          }
        }
      ]
    },
    {
      "name": "roles",
      "description": "Expose realm and client roles in tokens",
      "protocol": "openid-connect",
      "attributes": {
        "display.on.consent.screen": "true",
        "consent.screen.text": "${rolesScopeConsentText}",
        "include.in.token.scope": "false"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        },
        {
          "name": "client roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "introspection.token.claim": "true",
            "claim.name": "resource_access.${client_id}.roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        },
        {
          "name": "audience resolve",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-resolve-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "introspection.token.claim": "true"
          }
        }
      ]
    },
    {
      "name": "web-origins",
      "description": "Populate allowed web origins",
      "protocol": "openid-connect",
      "attributes": {
        "display.on.consent.screen": "false",
        "consent.screen.text": "",
        "include.in.token.scope": "false"
      },
      "protocolMappers": [
        {
          "name": "allowed web origins",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-allowed-origins-mapper",
          "consentRequired": false,
          "config": {
            "access.token.claim": "true",
            "introspection.token.claim": "true"
          }
        }
      ]
    },
    {
      "name": "service-audit",
      "description": "Expose realm roles under audit claim when requested",
      "protocol": "openid-connect",
      "attributes": {
        "display.on.consent.screen": "true",
        "consent.screen.text": "Allow access to audit metadata",
        "include.in.token.scope": "true"
      },
      "protocolMappers": [
        {
          "name": "audit roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "claim.name": "audit_roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "demo",
      "email": "demo@example.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Demo",
      "lastName": "User",
      "realmRoles": [
        "offline_access",
        "service.reader"
      ],
      "credentials": [
        {
          "type": "password",
          "value": "demo",
          "temporary": false
        }
      ]
    },
    {
      "username": "service-account-confidential-cli",
      "enabled": true,
      "emailVerified": false,
      "serviceAccountClientId": "confidential-cli",
      "realmRoles": [
        "service.reader"
      ],
      "requiredActions": [],
      "credentials": []
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "service.reader",
        "description": "Read access to backend service APIs",
        "composite": false,
        "clientRole": false,
        "containerId": "oauth-study"
      },
      {
        "name": "service.writer",
        "description": "Write access to backend service APIs",
        "composite": false,
        "clientRole": false,
        "containerId": "oauth-study"
      }
    ]
  },
  "groups": [],
  "defaultDefaultClientScopes": [
    "profile",
    "email",
    "roles",
    "web-origins"
  ],
  "defaultOptionalClientScopes": [
    "offline_access",
    "service-audit"
  ],
  "defaultRoles": [
    "offline_access",
    "uma_authorization",
    "service.reader",
    "service.writer"
  ]
}
